---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getBlogList, getCategories, formatBlogPost } from '../../../lib/blog';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  try {
    const categories = await getCategories();
    return await Promise.all(
      categories.map(async (cat) => {
        const postRes = await getBlogList({ categoryId: cat.id, limit: 30 });
        return {
          params: { id: cat.id },
          props:  { category: cat, posts: postRes.contents },
        };
      })
    );
  } catch {
    return [
      {
        params: { id: 'news' },
        props: {
          category: { id: 'news', name: 'お知らせ', slug: 'news' },
          posts: [],
        },
      },
    ];
  }
};

const { category, posts: rawPosts } = Astro.props;
const posts = rawPosts.map(formatBlogPost);
---

<BaseLayout
  title={`${category.name} | ブログ`}
  description={`Harmony Music Schoolのブログ - ${category.name}カテゴリの記事一覧`}
>
  <section class="py-24 bg-cream-100 border-b border-cream-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-forest-700 text-xs tracking-widest uppercase mb-3">Blog / Category</p>
      <h1 class="font-serif text-5xl text-charcoal-900">{category.name}</h1>
    </div>
  </section>

  <section class="py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8 fade-in">
        <a href="/blog" class="text-sm text-forest-700 hover:text-forest-600 transition-colors">← すべての記事を見る</a>
      </div>

      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post, i) => (
            <article class="fade-in group" style={`transition-delay: ${i * 60}ms`}>
              <a href={`/blog/${post.id}`} class="block">
                <div class="aspect-video bg-forest-800 mb-4 flex items-center justify-center
                            group-hover:opacity-90 transition-opacity">
                  <span class="text-cream-200 text-4xl opacity-20">♪</span>
                </div>
                <div class="flex items-center gap-3 mb-2">
                  <span class="px-2 py-0.5 bg-cream-100 text-forest-700 text-[11px]">{post.category.name}</span>
                  <time class="text-[11px] text-charcoal-700" datetime={post.publishedAt}>{post.formattedDate}</time>
                </div>
                <h2 class="font-medium text-charcoal-900 group-hover:text-forest-700 transition-colors">{post.title}</h2>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <p class="text-center text-charcoal-700 py-24">このカテゴリの記事はまだありません。</p>
      )}
    </div>
  </section>
</BaseLayout>
